<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <!-- Unique -->
        <Title>Castaway Base</Title>
        <AssemblyName>Castaway.Base</AssemblyName>
        <PackageId>Castaway.Base</PackageId>
        <RootNamespace>Castaway</RootNamespace>

        <!-- Common -->
        <PackageVersion>0.0.20210612-pg.1</PackageVersion>
        <TargetFramework>net5.0</TargetFramework>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Liam Cole</Authors>
        <RepositoryUrl>https://github.com/LiamCoalStudio/castaway</RepositoryUrl>
        <RepositoryType>GitHub</RepositoryType>
        <Nullable>enable</Nullable>
        <Copyright>[c] LiamCoalStudio 2021</Copyright>
        <PackageProjectUrl>https://github.com/LiamCoalStudio/castaway</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="glfw-net" Version="3.3.1" />
      <PackageReference Include="System.Drawing.Common" Version="6.0.0-preview.4.21253.7" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="bin\**" />
      <EmbeddedResource Remove="bin\**" />
      <None Remove="bin\**" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Castaway.Native\Castaway.Native.csproj" />
    </ItemGroup>
    
    <ItemGroup>
        <EmbeddedResource Include="OpenGL\_shaders\*\*.glsl" />
        <Compile Remove="OpenGL\_shaders\*\*.glsl" />
    </ItemGroup>
</Project>
