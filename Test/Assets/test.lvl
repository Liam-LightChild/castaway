# .lvl file example
# Contains 2 objects

Set Camera 0
Set Speed 0.075

InitialCamera ${Camera}

# Camera
Object
	Position 0 0 -0.75
	
	# Default Rotation is [0,0,0], so this line isn't needed.
	Rotation 0 0 0
	# Default Scale is [1,1,1], so this line isn't needed.
	Scale 1 1 1
	
	Controller PerspectiveCamera
		Id ${Camera}
		Size 1
		FOV 90
		BackgroundColor 0.019607843 0.90196078 1
	End
	
	Controller PlayerAction
		KeyPressed
			Spacebar "ProgramEntrypoint::SpacebarHandler"
			LeftShift "ProgramEntrypoint::LeftShiftHandler"
			W "ProgramEntrypoint::WHandler"
			S "ProgramEntrypoint::SHandler"
			D "ProgramEntrypoint::DHandler"
			A "ProgramEntrypoint::AHandler"
			
			Up "ProgramEntrypoint::UpHandler"
			Down "ProgramEntrypoint::DownHandler"
			Right "ProgramEntrypoint::RightHandler"
			Left "ProgramEntrypoint::LeftHandler"
		End
		
		KeyPressedNow
			LeftControl "ProgramEntrypoint::SpeedUp"
		End
		
		KeyUnpressed
			LeftControl "ProgramEntrypoint::SlowDown"
		End
	End
End

# Sphere
Object
	Position -2 0 4
	
	Mesh /Sphere.obj Z_Up
	
	Texture /test.png
		FilterNearest true
	End
	
	Controller Transform Empty
	Controller MeshRenderer Empty
End

# Cube
Object
	Position 2 0 4
	
	Mesh /Cube.obj Z_Up
	Texture /test.png
		FilterNearest true
	End
	Controller Transform Empty
	Controller MeshRenderer Empty
End
